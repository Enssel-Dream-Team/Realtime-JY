SPRING_PROFILES_ACTIVE=local

# Databases
MONGODB_URI=mongodb://localhost:27017/realtime
MONGODB_DATABASE=realtime

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
INGEST_KAFKA_TOPIC=ingest.cleansing.raw_docs

# Spring Batch metadata (H2 in-memory)
SPRING_DATASOURCE_URL=jdbc:h2:mem:batchmeta;MODE=PostgreSQL;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE
SPRING_DATASOURCE_USERNAME=sa
SPRING_DATASOURCE_PASSWORD=
SPRING_DATASOURCE_DRIVER=org.h2.Driver

# Scheduling (CRON expressions)
INGEST_SCHEDULE_RSS_CRON=0 */30 * * * *
INGEST_SCHEDULE_WIKI_CRON=0 30 2 * * *
INGEST_SCHEDULE_YOUTUBE_INITIAL_DELAY=PT1M
INGEST_SCHEDULE_YOUTUBE_FIXED_DELAY=PT30M

# External APIs
YOUTUBE_API_KEY=
YOUTUBE_REGION_CODE=KR
YOUTUBE_MAX_RESULTS=25
